<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChangePassword"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>
        <TextView
            android:id="@+id/viewHeader"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah Password"
            android:layout_marginTop="10dp"
            android:textSize="24dp"
            android:typeface="serif"
            android:textColor="#000"/>
        <View
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <android.support.v7.widget.CardView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="50dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false">
            <TextView
                android:id="@+id/viewMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:typeface="serif"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:text="Masukan Password, password harus sesuai dengan konfirmasi password"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:typeface="serif"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:background="#00ff00"
                    android:padding="5dp"
                    android:text=""
                    android:visibility="gone"
                    android:id="@+id/resultChange"/>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/colorPrimary"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txtPassword"
                        style="@style/EditTextTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:drawableLeft="@drawable/ic_https_24dp_black"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_https_24dp_black"
                        android:hint="Password Baru"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textSize="16dp"
                        android:paddingBottom="17dp"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/colorPrimary"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txtPasswordKonfirmasi"
                        style="@style/EditTextTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:drawableLeft="@drawable/ic_https_24dp_black"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_https_24dp_black"
                        android:hint="Konfirmasi Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textSize="16dp"
                        android:paddingBottom="17dp"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:paddingLeft="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="Ubah Password"
                    android:pointerIcon="hand"
                    android:textColor="#fff"
                    android:typeface="serif"
                    android:id="@+id/btnChange"
                    android:layout_marginBottom="10dp"
                    android:nestedScrollingEnabled="false"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>
