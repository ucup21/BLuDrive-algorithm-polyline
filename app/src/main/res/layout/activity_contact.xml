<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".activity.ContactActivity">

    <View
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kontak Kami"
        android:layout_marginTop="10dp"
        android:textSize="24dp"
        android:typeface="serif"
        android:textColor="#000"/>
    <View
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>

    <android.support.v7.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:id="@+id/contact_email"
                android:typeface="serif"
                android:layout_margin="10dp"
                android:textSize="18dp"
                android:text="yusup.bludrive@gmail.com"
                android:drawableLeft="@drawable/ic_email_24dp_black"
                android:drawableStart="@drawable/ic_email_24dp_black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:typeface="serif"
                android:layout_margin="10dp"
                android:textSize="18dp"
                android:text="+62 896 3341 0789"
                android:id="@+id/contact_person"
                android:drawableLeft="@drawable/ic_phone_iphone_24dp"
                android:drawableStart="@drawable/ic_phone_iphone_24dp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
